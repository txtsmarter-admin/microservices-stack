{
  "name": "@my-app/gw",
  "version": "1.0.0",
  "description": "gw microservice",
  "main": "dist",
  "scripts": {
    "build": "npm run clean  &&  tsc -p src/tsconfig.json",
    "clean": "rimraf dist/",
    "check": "npm run format && npm run lint && npm run build && npm run test && npm run cli-test",
    "dev": "cross-env ENV_FILE=envs/local.dev.env BLUEBIRD_W_FORGOTTEN_RETURN=0 ts-node --files src/main.ts",
    "debug": "cross-env ENV_FILE=envs/local.dev.env TS_NODE_FILES=true node --inspect-brk -r ts-node/register src/main.ts",
    "format": "prettier --write \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "lint": "eslint \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "start": "NODE_ENV=${NODE_ENV:-production} node dist/main.js",
    "test:ci": "cross-env ENV_FILE=envs/circleci.test.env jest --coverage --runInBand",
    "test": "cross-env ENV_FILE=envs/local.test.env jest --coverage --runInBand --no-cache",
    "cli-test": "cross-env ENV_FILE=envs/local.test.env BLUEBIRD_W_FORGOTTEN_RETURN=0 ts-node --files src/main.ts",
    "setup:local": "ts-node dev/setup.local.ts",
    "setup:local:force": "npm run setup:local -- --force",
    "tunnel": "npx localtunnel --port 4000 --subdomain api-my-app"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "MyApp",
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.35",
    "@types/object-hash": "2.2.1",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "cross-env": "7.0.3",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "fast-glob": "3.2.11",
    "jest": "28.1.0",
    "jest-extended": "2.0.0",
    "jest-standard-reporter": "2.0.0",
    "moleculer-repl": "0.7.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0",
    "type-fest": "2.12.2",
    "typescript": "4.6.4",
    "utility-types": "3.10.0",
    "@types/hapi__hapi": "~20.0.10",
    "@types/ms": "0.7.31",
    "@types/validator": "13.7.2"
  },
  "dependencies": {
    "@apollo/utils.logger": "1.0.0",
    "@my-app/authz-api": "workspace:*",
    "@my-app/gw-api": "workspace:*",
    "@casl/ability": "5.4.3",
    "@hapi/hapi": "20.2.2",
    "amqplib": "0.9.0",
    "dotenv": "16.0.1",
    "graphql-request": "4.2.0",
    "ioredis": "5.0.5",
    "joiful": "3.0.2",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "moleculer": "0.14.21",
    "moleculer-context-db": "1.3.0",
    "moment": "2.29.3",
    "notepack.io": "2.3.0",
    "object-hash": "3.0.0",
    "pkg-dir": "5.0.0",
    "redlock": "4.2.0",
    "reflect-metadata": "0.1.13",
    "thunky": "1.1.0",
    "typed-moleculer": "1.0.5",
    "winston": "3.7.2",
    "winston-gelf-transporter": "1.0.2",
    "graphql": "15.5.2",
    "apollo-server-core": "3.7.0",
    "apollo-server-hapi": "3.7.0",
    "apollo-server-plugin-base": "3.5.3",
    "type-graphql": "1.1.1",
    "ms": "2.1.3",
    "class-validator": "0.13.2"
  },
  "engines": {
    "node": ">= 12.x.x"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "coverageDirectory": "tests/coverage",
    "reporters": [
      "jest-standard-reporter"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "roots": [
      "./tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testTimeout": 60000,
    "setupFilesAfterEnv": [
      "jest-extended",
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  }
}
